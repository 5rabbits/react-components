{
  "extends": ["@5rabbits", "prettier"],
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "jest": true
  },
  "rules": {
    "import/no-extraneous-dependencies": ["error", {
      "devDependencies": [
        "stories/*",
        "rollup.config.js",
        "tests/*",
        "**/__tests__/*"
      ]
    }]
  },
  "settings": {
    "import/resolver": {
      "@5rabbits/eslint-import-resolver-directory-named": {
        "moduleDirectory": [
          "src",
          "node_modules",
          "."
        ]
      }
    },
    "import/core-modules": [
      "react", "react-dom"
    ]
  }
}
